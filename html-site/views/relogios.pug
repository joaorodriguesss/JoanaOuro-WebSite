extends layout

block content
  h2.text-center.title-margin Relógios

  .breadcrumbs.text-center
    p
      a(href='/') Home
      |  / 
      a Relógios

  .options
    .option
      a(href='/relogios/mulher')
        img(src='/images/categoria_mulher.png' alt='Relógios Mulher')
        h3 MULHER
    .option
      a(href='/relogios/homem')
        img(src='/images/categoria_homem.png' alt='Relógios Homem')
        h3 HOMEM

  style.
    .text-center {
      margin: 50px 0 0px 0; /* Reduza a margem superior e ajuste conforme necessário */
      text-align: center;
    }

    .title-margin {
      margin-bottom: 10px; /* Ajuste este valor conforme necessário */
    }

    .breadcrumbs {
      margin: 10px 0 20px 0; /* Reduza a margem superior e ajuste conforme necessário */
      font-size: 14px;
    }

    .breadcrumbs a {
      color: #000; /* Define a cor do texto do link como preto */
      //- text-decoration: none; /* Remove o sublinhado dos links */
    }

    .breadcrumbs a:visited {
      color: #000; /* Mantém a cor do texto como preto mesmo após a visita */
    }

    .breadcrumbs a:hover, .breadcrumbs a:active {
      color: #000; /* Mantém a cor do texto como preto ao passar o mouse ou ao clicar */
    }

    .options {
      display: flex;
      justify-content: space-around;
      gap: 2%; /* Adiciona espaço entre as opções */
      margin: 40px 0;
    }

    .option {
      text-align: center;
      max-width: 700px; /* Define uma largura máxima para as opções */
    }

    .option a {
      color: #000; /* Define a cor do texto do link como preto */
      text-decoration: none; /* Remove o sublinhado dos links */
    }

    .option a:visited {
      color: #000; /* Mantém a cor do texto como preto mesmo após a visita */
    }

    .option a:hover, .option a:active {
      color: #000; /* Mantém a cor do texto como preto ao passar o mouse ou ao clicar */
    }

    .option img {
      width: 100%;
      height: 400px; /* Defina a altura fixa desejada */
      object-fit: cover; /* Ajusta a imagem para cobrir o elemento mantendo a proporção */
      cursor: pointer;
      transition: transform 0.2s;
    }

    .option img:hover {
      transform: scale(1.05);
    }
